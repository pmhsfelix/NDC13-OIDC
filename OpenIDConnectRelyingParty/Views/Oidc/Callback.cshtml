@model OpenIDConnectRelyingParty.Controllers.ViewModel

@{
    ViewBag.Title = "title";
}

<h2>JWT</h2>

<h3>Header</h3>
<ul>
    @foreach(var pair in Model.JwtHeader)
    {
        <li>@pair.Key : @pair.Value</li>
    }
</ul>

<h3>Payload</h3>
<ul>
    @foreach(var pair in Model.JwtPayload)
    {
        <li>@pair.Key : @pair.Value</li>
    }
</ul>


<h3>Principal</h3>
<ul>
    @foreach(var c in Model.Principal.Identities.SelectMany(id => id.Claims))
    {
        <li>@string.Format("{0}:{1} issued by {2}",c.Type,c.Value,c.Issuer)</li>
    }
</ul>

<h3>Task</h3>
<ul>
    @foreach(var task in Model.Tasks)
    {
        <li>Task @task</li>
    }
</ul>

